@model ASP.NET_Fullstack_MVC.Models.ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h3>Are you sure you want to delete this?</h3>
        <div class="card card-sm">
            <div class="card-body">
                <h4>Product Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Product ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductID)</dd>
                    <dt class="col-sm-4">Product Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>
                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Qty)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
